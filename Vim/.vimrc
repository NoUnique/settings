syntax enable
syntax on
colorscheme monokai

set guifont=D2Coding:h16
set number "라인표시
set autoindent "자동들여쓰기
set smartindent "스마트들여쓰기
set shiftwidth=4 "shift 4칸
set tabstop=4 "tab 4칸
set softtabstop=-1 "tab 4칸
" for command mode
nnoremap <S-Tab> <<
" for insert mode
inoremap <S-Tab> <C-d>
set ignorecase "검색 대소문자 구분X
set hlsearch "검색 하이라이트
set expandtab "tab 대신 space
set nocompatible
set backspace=2
set fileencoding=utf-8 "파일 인코딩 형식 지정
set history=1000 "명령어 히스토리 1000개
set title "파일제목 표시
set ruler "상태표시줄에 커서 위치표시
set showmatch "매칭괄호 표시
set nobackup "백업파일 만들지 않음
